<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/albastru_deschis"
        tools:context=".ui.generareTraseu.TraseuFragment">

        <TextView
            android:id="@+id/titlu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="Oferă un feedback"
            android:textColor="#03045e"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/feedbackNume"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="#0000FF"
            android:hint="Username..."
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titlu1" />

        <EditText
            android:id="@+id/feedbackMessage"
            android:layout_width="330dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="#0000FF"
            android:breakStrategy="balanced"
            android:fitsSystemWindows="true"
            android:gravity="top"
            android:hint="Your Message..."
            android:inputType="textMultiLine"
            android:padding="5dp"
            android:singleLine="false"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/feedbackNume" />

        <TextView
            android:id="@+id/q1Feedback_titlu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:padding="20dp"
            android:text="Informațiile oferite v-au fost de folos?"
            android:textAllCaps="false"
            android:textColor="#03045e"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/feedbackMessage" />

        <Spinner
            android:id="@+id/q1Feedback_Sp"
            style="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:animateLayoutChanges="true"
            android:background="#014f86"
            android:dropDownWidth="match_parent"
            android:entries="@array/q1FeedbackStrings"
            android:padding="10dip"
            android:spinnerMode="dialog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/q1Feedback_titlu" />

        <TextView
            android:id="@+id/q2Feedback_titlu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:padding="20dp"
            android:text="Cât de satisfăcut ați fost de calitatea îndrumărilot oferite de către personalul instituțiilor cu care ați reacționat?"
            android:textAllCaps="false"
            android:textColor="#03045e"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/q1Feedback_Sp" />

        <Spinner
            android:id="@+id/q2Feedback_Sp"
            style="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:animateLayoutChanges="true"
            android:background="#014f86"
            android:dropDownWidth="match_parent"
            android:entries="@array/q2FeedbackStrings"
            android:padding="10dip"
            android:spinnerMode="dialog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/q2Feedback_titlu" />

        <TextView
            android:id="@+id/q3Feedback_titlu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:padding="20dp"
            android:text="Care a fost timpul mediu de așteptare?"
            android:textAllCaps="false"
            android:textColor="#03045e"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/q2Feedback_Sp" />

        <Spinner
            android:id="@+id/q3Feedback_Sp"
            style="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:animateLayoutChanges="true"
            android:background="#014f86"
            android:dropDownWidth="match_parent"
            android:entries="@array/q3FeedbackStrings"
            android:padding="10dip"
            android:spinnerMode="dialog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/q3Feedback_titlu" />

        <TextView
            android:id="@+id/q4Feedback_titlu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:padding="20dp"
            android:text="Vă rugăm să evaluați întreaga experiență prin acordarea unui număr de puncte"
            android:textAllCaps="false"
            android:textColor="#03045e"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/q3Feedback_Sp" />

        <RatingBar
            android:id="@+id/rBarFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@color/albastru_deschis"
            android:numStars="5"
            android:progressTint="#0000FF"
            android:stepSize="1"
            android:theme="@style/RatingBarFeedback"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/q4Feedback_titlu"
            tools:ignore="MissingConstraints"
            tools:visibility="visible" />

        <Button
            android:id="@+id/feedbackConfirma"
            android:layout_width="145dp"
            android:layout_height="60dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/background_button_contact"
            android:text="Confirmă"
            android:textAllCaps="false"
            android:textColor="#0077b6"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rBarFeedback" />


        <TextView
            android:id="@+id/text_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"
            android:textColor="#caf0f8"
            android:textSize="0sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/feedbackConfirma" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>